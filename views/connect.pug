extends layout


block content
	.page-header
		h3 Connect Device
		hr
	.form-horizontal
		input(type='hidden', name='_csrf', value=_csrf)
		.form-group.row.justify-content-md-center
			.col-sm-2.col-form-label.text-right.font-weight-bold
				label(for='name') Search
			.col-sm-8
				input.form-control(type='text', name='search', id='search', placeholder="NOT IMPLEMENTED!!!", autofocus=true)
	.form-horizontal(id="devices")
